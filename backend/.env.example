# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://192.168.8.100:3001

# Database (MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/afrikreate?retryWrites=true&w=majority

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long_here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_key_different_from_above
JWT_REFRESH_EXPIRE=30d

# AWS S3 Storage (Optional - for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=afrikreate-uploads

# Cloudinary (Alternative to S3)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Blockchain RPC URLs
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
POLYGON_RPC_URL=https://polygon-rpc.com

# External APIs
COINGECKO_API_KEY=your_coingecko_api_key_if_premium
COINGECKO_API_URL=https://api.coingecko.com/api/v3
EVENTBRITE_API_KEY=your_eventbrite_api_key
MEETUP_API_KEY=your_meetup_api_key

# NFT & Artwork APIs
OPENSEA_API_KEY=your_opensea_api_key
OPENSEA_API_URL=https://api.opensea.io/api/v2
MORALIS_API_KEY=your_moralis_api_key
ALCHEMY_API_KEY=your_alchemy_api_key
ALCHEMY_NFT_API_KEY=your_alchemy_nft_api_key

# Phenix Device & Kryptic Wallet
PHENIX_SDK_URL=https://phenix-sdk-url
PHENIX_API_KEY=your_phenix_api_key
PHENIX_DEVICE_ID=your_device_id
KRYPTIC_WALLET_API=your_kryptic_api_url
KRYPTIC_APP_ID=your_kryptic_app_id
WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email (Optional - for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Frontend URL (for CORS)
FRONTEND_URL=http://192.168.8.100:3001

# WebSocket (Real-time updates for Phenix device)
WEBSOCKET_PORT=5001
WEBSOCKET_ORIGINS=http://localhost:3001,http://192.168.8.100:3001

# Certificate Generation
CERTIFICATE_TEMPLATE_PATH=./templates/certificate.html
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Session Configuration
SESSION_SECRET=your_session_secret_key_change_this

# Logging
LOG_LEVEL=debug
SENTRY_DSN=your_sentry_dsn_optional
